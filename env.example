# ================================
# REQUIRED FOR BASIC FUNCTIONALITY  
# ================================

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# TMDB API (REQUIRED for content discovery)
NEXT_PUBLIC_TMDB_API_KEY=your-tmdb-api-key-here
TMDB_API_READ_ACCESS_TOKEN=your-tmdb-read-access-token

# RapidAPI (REQUIRED for streaming availability)
RAPIDAPI_KEY=your-rapidapi-key-here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT Secret for authentication
JWT_SECRET=your-jwt-secret-here-for-server-side-auth

# ShuffleStream Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/shufflestream"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="shufflestream"
DATABASE_USER="username"
DATABASE_PASSWORD="password"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
API_SECRET_KEY="your-secret-key-here"
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRES_IN="7d"

# TMDB API Configuration
NEXT_PUBLIC_TMDB_API_KEY="your-tmdb-api-key"
TMDB_API_URL="https://api.themoviedb.org/3"

# RapidAPI Configuration (for streaming service APIs)
RAPIDAPI_KEY="your-rapidapi-key"
RAPIDAPI_HOST="streaming-availability.p.rapidapi.com"

# Platform API Keys (for deep linking)
NETFLIX_API_KEY="your-netflix-api-key"
DISNEY_API_KEY="your-disney-api-key"
HULU_API_KEY="your-hulu-api-key"
HBO_MAX_API_KEY="your-hbo-max-api-key"
AMAZON_PRIME_API_KEY="your-amazon-prime-api-key"
APPLE_TV_API_KEY="your-apple-tv-api-key"
PEACOCK_API_KEY="your-peacock-api-key"
PARAMOUNT_API_KEY="your-paramount-api-key"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@shufflestream.com"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# File Storage Configuration
STORAGE_TYPE="local" # local, s3, cloudinary
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="shufflestream-assets"

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Analytics Configuration
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Social Authentication (OAuth)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"

# Push Notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@shufflestream.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Security
CORS_ORIGIN="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,https://shufflestream.com"
BCRYPT_ROUNDS="12"

# Feature Flags
ENABLE_SOCIAL_FEATURES="true"
ENABLE_ADMIN_PANEL="true"
ENABLE_ANALYTICS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_CULTURAL_CONTENT="true"

# Development/Production
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="ShuffleStream"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
NEW_RELIC_LICENSE_KEY="your-new-relic-key"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"
BACKUP_S3_BUCKET="shufflestream-backups" 